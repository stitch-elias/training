cmake \
      -D CMAKE_BUILD_TYPE=RELEASE \
	  -D CMAKE_C_COMPILER=/usr/bin/gcc-7 \
	  -D BUILD_opencv_python2=OFF \
	  -D CMAKE_INSTALL_PREFIX=/usr/local \
      -D INSTALL_PYTHON_EXAMPLES=OFF \
      -D INSTALL_C_EXAMPLES=OFF \
      -D OPENCV_ENABLE_NONFREE=ON \
      -D OPENCV_EXTRA_MODULES_PATH=/home/qiu/project/opencv_contrib-4.6.0/modules \
      -D PYTHON_EXECUTABLE=/home/ubuntu/anaconda3/envs/myEnv/bin/python3 \
      -D BUILD_EXAMPLES=ON \
      -D WITH_CUDA=ON \
      -D WITH_CUDNN=ON \
      -D OPENCV_DNN_CUDA=ON \
      -D WITH_CUBLAS=ON \
      -D CUDA_TOOLKIT_ROOT_DIR=/usr/local/cuda \
      -D OpenCL_LIBRARY=/usr/local/cuda/lib64/libOpenCL.so \
      -D OpenCL_INCLUDE_DIR=/usr/local/cuda/include \
	  -D OPENCV_DOWNLOAD_MIRROR_ID=gitcode opencv-4.x \
      ..
